---
import GitHub from "@/icons/GitHub.astro"
import GitLab from "@/icons/GitLab.astro"
import Section from "../Section.astro"

import { projects } from "@cv"
---

<Section title="Work Samples">
  <ul>
    {
      projects.map(
        ({ url, image, description, highlights, name, isActive, github, gitlab }) => {
          
          return (
            <li>
              <article>
                <header>
                  <h3>
                    { image && <img src={image} /> }
                    <a href={url} target="_blank" title={`Goto demo`}>
                      {name}
                    </a>
                    {isActive && <span>â€¢</span>}
                    {(github || gitlab) && (
                      <a
                        class="github-code-link"
                        href={github || gitlab}
                        target="_blank"
                        title={`Goto source`}
                      >
                        <span class="gitIcon">{ (github && <GitHub />) || <GitLab /> }</span>
                      </a>
                    )}
                  </h3>
                  <ul>{description.map(p => <li>{p}</li>)}</ul>
                </header>
                <footer>
                  {highlights.map((highlight) => {
                    return <span>{highlight}</span>
                  })}
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  section > ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-inline: -16px;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article p, article > header > ul > li {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
    opacity: 0.5;
  }

  article > header > ul {
    margin-right: 72px;
    margin-top: 0.5rem;
    margin-left: 2ch;
    list-style: disc outside;
  }

  article h3 span {
    color: rgb(0, 188, 47);
    animation-name: flicker;
    animation-duration: 2s;
    animation-timing-function: ease-in;
    animation-iteration-count: infinite;
  }

  article h3 img {
    float: right;
    height: 64px;
    opacity: 0.66;
    filter:hue-rotate(90deg);
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background: #eee;
    color: #444;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  .github-code-link {
    margin-left: 5px;
  }

  span.gitIcon {
    position: relative;
    top: +0.2rem;
  }

  @keyframes flicker {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
    100% {
      opacity: 1;
    }
  }

  @media (width <= 700px) {
    section > ul {
      margin-inline: 0px;
    }

    article {
      border: none;
      box-shadow: 0 1px 1px #f2f2f2;
      padding: 0 0 16px 0;
    }
  }

  @media print {
    article h3 span {
      color: black;
      animation-name: none;
    }
  }
</style>
